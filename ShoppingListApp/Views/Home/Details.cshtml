@model ShoppingListApp.Data.ShoppingListItem

@{
    ViewData["Title"] = "Details: " + Model.ListName;
}

<h1>@ViewData["Title"]</h1>

<p>List ID: @Model.Id</p>
<p>List Name: @Model.ListName</p>
<p>Shopping Date: @Model.ShoppingDate.ToString("dd.MM.yyyy HH:mm:ss")</p>

<h3>Products</h3>
<ul>
    @foreach (var product in Model.Products)
    {
        <li>
            @if (product.IsChecked)
            {
                <del>@product.ProductName</del>
            }
            else
            {
                @product.ProductName
            }
        </li>
    }
</ul>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to Lists</a>
</div>

