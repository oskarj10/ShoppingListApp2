@model IEnumerable<ShoppingListApp.Models.ShoppingListItem>

@{
    ViewData["Title"] = "Shopping List";
}

<h1>Shopping List</h1>

<form asp-action="AddItem" method="post">
    <input type="text" name="description" placeholder="Add new item" />
    <button type="submit">Add</button>
</form>

<ul>
    @foreach (var item in Model)
    {
        <li>
            @if (item.IsChecked)
            {
                <del>@item.Description</del>
            }
            else
            {
                @item.Description
                <form asp-action="CrossOffItem" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit">Cross off</button>
                </form>
                <form asp-action="EditDescription" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="text" name="description" value="@item.Description" />
                    <button type="submit">Edit</button>
                </form>
            }
        </li>
    }
    }

